Görev_2

#include <iostream>
using namespace std;

int main()
{
   int x = 8, y = 7;
   cout << (x < y) << endl;
   cout << (x > y) << endl;
   cout << ((x-1) <= y) << endl;
   cout << (x >= (y+2)) << endl;
   cout << (x == y) << endl;
   cout << (x != y) << endl;
return 0;
}
********************************************************************
Görev_3
#include <iostream>
using namespace std;

int main()
{
   int x = 7, y = 1;
   cout << ((x <= y) || (y>1)) << endl;
   cout << ((x > 6) && (y==1)) << endl;
   cout << (x && !y) << endl;
   cout << (!(x-1) || (y+1 > 1)) << endl;
return 0;
}
