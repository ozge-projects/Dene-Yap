Görev_2

#include <iostream>
using namespace std;
int main()
{
   int sicaklik;
   cin >> sicaklik;
   if(sicaklik < 0)
       cout << "Kati";
   else if(sicaklik < 100)
       cout << "Sivi";
   else if(sicaklik < 10000)
       cout << "Gaz";
   else
       cout << "Plazma";
return 0;
}
