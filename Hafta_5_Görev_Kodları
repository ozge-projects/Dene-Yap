Görev_1

include <iostream>
using namespace std;

int main()
{
  int sayi;
  cin >> sayi;
 
  if(sayi >= 0)
  {
    if(sayi%3 == 0)
      cout << "Sayi 3 ile tam bolunur.";
    else
     cout << "Sayi 3 ile tam bolunemez.";
  }
  else
  {
    cout << "Negatif sayi girdiniz.";
  }
return 0;
}
